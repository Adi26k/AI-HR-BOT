{
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Python: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/app/main.py",
            "console": "integratedTerminal",
            "envFile": "${workspaceFolder}/.env",
            "justMyCode": true,
            "args": [
                "run",
                "--host",
                "127.0.0.1",
                "--port",
                "8000"
            ]
        }
    ],
    "inputs": [
        {
            "type": "pickString",
            "id": "programPath",
            "description": "Select the Python file to debug",
            "options": [
                "run.py",
                "app/main.py"
            ]
        }
    ]
}